<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.map.MapActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/clBottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <pucaberta.pucminas.core.components.RangeSeekBarView
        android:id="@+id/scoreSeekBar"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:layout_marginStart="24dp"
        android:clickable="false"
        app:barHeight="15dp"
        app:baseColor="@color/gray100"
        app:circleFillColor="@color/primaryColor"
        app:circleRadius="15dp"
        app:circleTextColor="@color/white"
        app:circleTextSize="14sp"
        app:fillColor="@color/accentColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:maxValue="3"
        app:minValue="0"
        app:orientation="BOTTOM_TO_TOP"
        app:stepValue="1"
        tools:currentValue="1" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/actvScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_shape_stroke"
        android:gravity="center"
        android:textSize="16sp"
        app:fontFamily="@font/roboto_bold"
        app:layout_constraintBottom_toBottomOf="@id/scoreSeekBar"
        app:layout_constraintEnd_toEndOf="@id/scoreSeekBar"
        app:layout_constraintStart_toStartOf="@id/scoreSeekBar"
        tools:text="1" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/actvScore"
        app:layout_constraintEnd_toEndOf="@id/actvScore"
        app:layout_constraintStart_toStartOf="@id/actvScore"
        app:layout_constraintTop_toTopOf="@id/actvScore"
        app:lottie_rawRes="@raw/fireworks_lottie" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/qrCodeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:src="@drawable/ic_qr_code"
        app:backgroundTint="@color/gray100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:maxImageSize="36dp"
        tools:ignore="ContentDescription,SpeakableTextPresentCheck" />

    <View
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:background="@drawable/shadow_bottom_to_top"
        app:layout_constraintBottom_toTopOf="@id/clBottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clBottom"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@color/primaryColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/circle_shadown"
        app:layout_constraintBottom_toBottomOf="@id/qrCodeButton"
        app:layout_constraintEnd_toEndOf="@id/qrCodeButton"
        app:layout_constraintStart_toStartOf="@id/qrCodeButton"
        app:layout_constraintTop_toTopOf="@id/qrCodeButton">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:lottie_rawRes="@raw/giftbox" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>